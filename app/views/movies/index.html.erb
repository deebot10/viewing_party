<% if @top_movies %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Rating</th>
    </tr>
  </thead>
  <% @top_movies.each do |movie| %>
  <div>
  <tbody>
    <tr>
      <td><%= button_to movie[:original_title], "/movies/#{movie[:id]}", method: :get, class: 'btn btn-outline-success' %></td>
      <td><%= movie[:vote_average] %></td>
    </tr>
  </tbody>
  </div>
  <% end %>
</table>
  <% end  %>
  <% if @search_movies %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Rating</th>
      </tr>
    </thead>
    <% @search_movies.each do |movie| %>
    <div>
    <tbody>
      <tr>
        <div">
        <td><%= button_to movie[:original_title], "/movies/#{movie[:id]}", method: :get, class: 'btn btn-outline-success' %></td>
        </div>
        <div>
        <td><%= movie[:vote_average] %></td>
        </div>
      </tr>
    </tbody>
    </div>
    <% end %>
  </table>
<% end %>
